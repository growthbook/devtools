{
  "compilerOptions": {
    "strict": true,
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2022",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "jsx": "react",
    "noEmitOnError": true,
    "rootDir": "src",
    "outDir": "dist/js",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@/*": ["./src/*"],
      "*": ["./*"]
    }
  }
}
